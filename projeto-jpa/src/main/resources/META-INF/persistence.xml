<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="projeto-alunos-pu" transaction-type="RESOURCE_LOCAL">
        <!--ENTIDADES MAPEADAS -->
        <class>rafael.fuctura.br.model.Aluno</class>
        <class>rafael.fuctura.br.model.Turma</class>
        <class>rafael.fuctura.br.model.Matricula</class>
        
        <properties>
            <!-- CONFIGURAÇÕES DO POSTGRESQL-->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/exerciciojpa"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="789123"/>
            
            <!--CONFIGURAÇÕES HIBERNATE ATUALIZADAS -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            
            <!-- RECRIA AS TABELAS -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
            <!-- ORDEM DAS COLUNAS - ESTRATÉGIA PERSONALIZADA -->
           <property name="hibernate.schema_ordering" value="id,nome,email,data_matricula"/>
            
            <!-- MOSTRA SQL E FORMATA -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>